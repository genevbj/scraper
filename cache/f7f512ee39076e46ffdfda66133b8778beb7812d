jQuery(function($) {
jQuery.mask.definitions={'i':'[0-9]'};
jQuery("#AInfoForm_phone").mask("+7? (iii) iii-ii-ii",{'placeholder':'_'});

        function getDistrict() {
                var value = $('#AInfoForm_geo_id').val();
                var label = $('#AInfoForm_district_id').parents('.row').find('label');
                var mid = new Array(1961, 1966, 1977, 1980, 1981, 1991, 1992);

                $.get('/post/getDistricts',{'geo_id':value}, function(response){
                    if (response&&response!='') {
                        $('#AInfoForm_district_id').html(response).parents('.row').show();
                    } else {
                        $('#AInfoForm_district_id').html('').parents('.row').hide();
                    }
                    $('#AInfoForm_district_id').selectmenu('refresh');
                });

                if ($.inArray( parseInt(value), mid)>-1) {
                    label.text('Метро');
                } else {
                    label.text('Район');
                }

                if (value) {
                    var options, street;
                    options = { serviceUrl:'/city/StreetList?geo_id='+value };
                }
            }

            //Подгружаем города районы при выборе города
            $('#Region').selectmenu({
                width : 'auto',
                change:function(event,ui) {
                    if($(this).val()!=''){
                        $('#AInfoForm_geo_id').load('/post/getCities',{ region_id: $(this).val() }, function(){
                            $('#AInfoForm_geo_id').selectmenu('refresh');
                            getDistrict();
                        });
                        $('#AInfoForm_geo_id').parents('.row').show();
                        
                        if($('#AInfoForm_geo_id').val()!='' && $('#AInfoForm_category_id').val()!=''){
                            $.post(
                                '/post/getServices',
                                {geo:$('#AInfoForm_geo_id').val(), category:$('#AInfoForm_category_id').val()},
                                function(response){
                                    if(response){
                                        $('#service').html(response);
                                        $('.last').show();
                                    }
                                }
                            );
                        }
                        
                        
                    }else{
                        $('#AInfoForm_geo_id').parents('.row').hide();
                        $('#AInfoForm_district_id').html('').parents('.row').hide();
                        $('.last').hide();
                        
                    }
                }
            });
            

            //Подгружаем районы при выборе города
            $('#AInfoForm_geo_id').selectmenu({
                width : 'auto',
                change:function(event,ui) {
                
                    if($(this).val()!=''){
                        if($('#AInfoForm_geo_id').val()!='' && $('#AInfoForm_category_id').val()!=''){
                            $.post(
                                '/post/getServices',
                                {geo:$('#AInfoForm_geo_id').val(), category:$('#AInfoForm_category_id').val()},
                                function(response){
                                    if(response){
                                        $('#service').html(response);
                                        $('.last').show();
                                    }
                                }
                            );
                        }
                        getDistrict();  
                    }else{
                        $('#AInfoForm_district_id').html('').parents('.row').hide();
                        $('.last').hide();
                    }            
                }
            });
            
            //Подгружаем районы, если город уже выбран
            if($('#AInfoForm_geo_id').val()) {
                getDistrict();  
            }
            if($('#AInfoForm_geo_id option').length==0) {
                $('#AInfoForm_geo_id').closest('.row').hide();
                
            }
            $('#post_form input').keyup(function() {
                $('#ct').val(Number($('#ct').val())+1);
            });
            var addct = document.createElement('input');
            addct.type = 'hidden';
            addct.id = 'ct';
            addct.name = 'ct';
            addct.value = '0';
            document.getElementById('post_form').appendChild(addct);
    

        new qq.FileUploaderBasic({
            params: {},
            button: $('#aform_images .add-photo')[0],   //DOM элемент, а не jquery объект!
            action: '/post/uploadFile', //адрес серверного скрипта
            allowedExtensions: ['jpg', 'jpeg', 'gif', 'png'],
            onSubmit:function(id){
                if($('#aform_images ul li').length == 13){
                    alert('Загружено максимальное количество фотографий');
                    return false;
                }
                $('#aform_images ul').append('<li class="loading" data-id="' + id + '"><div class="img-holder"><img src="/images/ajax-loader.gif" alt="Загрузка изображения"></div></li>');
            },
            onComplete: function(id, fileName, responseJSON){
                if (responseJSON.status == true) {
                    var file = responseJSON.folder+responseJSON.filename;
                    var item = $('#aform_images li[data-id='+id+']');
                    item.find('img').attr('src', responseJSON.crop);
                    item.append($('<input type="hidden" name="Images[]">').val(responseJSON.image_id));
                    item.append('<span class="title"><a href="#" class="delete">Удалить</a></span>');
                    item.removeClass('loading');
                } else {
                    $('#aform_images li[data-id='+id+']').remove();
                    if (responseJSON.message) {
                        message = responseJSON.message;
                    } else {
                        message = 'Произошла ошибка при загрузке изображения, попробуйте позже';
                    }
    
                    $.magnificPopup.open({
                        items: {
                            src: '<div class="white-popup">'+message+'</div>',
                            type: 'inline'
                        }
                    })
                }

            },
            showMessage: function(message){
                $.magnificPopup.open({
                    items: {
                        src: '<div class="white-popup">'+message+'</div>',
                        type: 'inline'
                    }
                });
            }
        });

    

        $('#aform_images').on('click', '.delete', function(){
        $(this).closest('li').remove();
        return false;
        });
    

    $(document).on('change', '.categories.first', function() {
        var self = this;

        //Если выбрана категория
        if ($(self).val()) {

           if ($('.job-description')) { 
                if ($(self).val() == 149) {
                    $('.job-description').show(0);
                } else {
                    $('.job-description').hide(0);
                }
            }
        }
    })


    
    function setCategories(obj) {
        
        var self = obj;
        var el = $(obj);

        var realty = ($('#section').val()==104);
        var job = ($('#section').val()==149);

        if(realty) $('label[for=AInfoForm_address]').text('Адрес объекта');
        else $('label[for=AInfoForm_address]').text('Адрес');

        if(job) $('.price-title').text('Зарплата');
        else $('.price-title').text('Цена (стоимость услуги)');

        $('#additional_fields').hide();

        $(self).parents('.row').nextAll('.subcategory').remove();

        //Если выбрана категория
        if ($(self).val()) {
            //Получаем список подкатегорий
            $.post('/post/getSubcategory', {category: el.val()}, function(response) {
                if(response){
                    //Если подкатегории получены       
                    //Проверяем, есть ли у данной категории уже выведенные подкатегории
                    if($(self).parents('.row').nextAll('.subcategory').length == 0){
                        // Если нет подкатегорий, то выводим подкатегории
                        $(self).closest('.category-group').append(response);
                        $('.subcategory select').selectmenu({
                            width : 'auto',
                            change:function(event,ui) {
                                setCategories(this);
                            }
                        });
                        var priceTitle = el.find('option[value='+ el.val() +']').attr('data-price');
                        if (priceTitle) {
                            $('.price .price-title').text(priceTitle);
                        }
                    }
                }else{
                    //Если категория последнего уровня получаем поля
                    $('#AInfoForm_category_id').val(el.val());
                    $.post('/post/getFields', {category:el.val()}, function(response){
                        if(response){
                            $('#additional_fields').html(response);
                            $('#additional_fields select').selectmenu({width : 'auto'});
                            $('#additional_fields').show();
                        }
                    });
                     if($('#AInfoForm_geo_id').val()!='' && $('#AInfoForm_category_id').val()!=''){
                         $.post(
                            '/post/getServices',
                            {geo:$('#AInfoForm_geo_id').val(), category:$('#AInfoForm_category_id').val()},
                            function(response){
                                if(response){
                                    $('#service').html(response);
                                    $('.last').show();
                                }
                            }
                        );
                    }  
                }   
            })
        }else{
            $('.last').hide();
        }
        
         
        
        
    }

    $('.categories').selectmenu({
        width : 'auto',
        change:function(event,ui) {
             setCategories(this);
        }
    });
    
     $('.last').hide();
    
    

        $('#post_form input[type=submit]').click(function () {
            var button = $(this);
            button.addClass('loading');
            button.val('Проверяем...');
            $.post('/post/validate', $('#post_form').serialize(), function (r) {
                r = JSON.parse(r)
                if (!$.isArray(r) && !$.isEmptyObject(r)) {
                    $('.error-text').remove();
                    $('.error').removeClass('error');

                    for (var item in r) {
                        if (item == 'AInfoForm_category_id') {
                            $('.category-group select:last').addClass('error');
                            $('.category-group .select-holder:last').addClass('error');
                        } else if (item=='AInfoForm_geo_id') {
                            $('.region-group select').addClass('error');
                            $('.region-group .select-holder').addClass('error');
                        } else {
                            $('#' + item).addClass('error');
                            $('#' + item).parents('.input-text').append($('<div class="error-text">').text(r[item][0]));
                            $('#' + item).closest('.row').find('select, .select-holder').addClass('error');
                        }
                    }
                    var error = $('.error').get(0)
                    if (error) {
                        $('html, body').animate({
                            scrollTop: $(error).offset().top-50
                        }, 200);
                    }
                    button.removeClass('loading');
                    button.val('Публиковать');
                    return false;
                } else {
                    button.val('Подождите...');
                    $('#post_form').submit();
                    return true;
                }
            });

            console.log($('#AInfoForm_category_id').val());

            return false;
        })
    
});
/*]]>*/
</script>
</body>
</html>